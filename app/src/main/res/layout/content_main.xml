<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.gestiondefrais.stephanerafflin.gestiondefrais.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:background="#50A0FF"
            android:textColor="#000000">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:id="@+id/titre">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/Histo"
                    android:layout_marginRight="@dimen/fab_margin">
                    <ImageButton
                        android:id="@+id/btnHisto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/histo"
                        android:text="Historique"
                        android:layout_marginTop="@dimen/fab_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historique"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titreFrais"
                    android:textColor="#000000"
                    android:text="Saisir des frais"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_below="@id/Histo"
                    android:layout_margin="@dimen/fab_margin"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/dat"
                android:layout_below="@id/titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/SaisirDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/calendrier"
                    android:layout_margin="@dimen/fab_margin"/>
                <TextView
                    android:id="@+id/dateChoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_alignRight="@+id/SaisirDate"
                    android:layout_margin="@dimen/fab_margin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/typeC"
                android:layout_below="@id/dat">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:text="Type :"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"/>
                <EditText
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:inputType="textImeMultiLine"
                    android:imeOptions="actionDone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/montantC"
                android:layout_below="@id/typeC">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:text="Montant : "
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"/>
                <EditText
                    android:id="@+id/montant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:inputType="numberDecimal"
                    android:layout_margin="@dimen/fab_margin"
                    android:background="#FFFFFF"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/Photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/montantC"
                android:src="@mipmap/photo"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"/>
            <ImageButton
                android:id="@+id/enregistrer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/Photo"
                android:src="@mipmap/enregistrer"
                android:layout_gravity="center_horizontal"
                android:background="#50A0FF"
                />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

